<section class="collapsable">
  <header>
    <h2>Manage Teams</h2>
    <button class="collapse-button button">&minus;</button>
  </header>
  <button class="add-team button" id="add-team-button">Add Team</button>
  {{> loader }}
  <form id="team-form">
    <button class="close button">&times;</button>
    <h2>Edit Team</h2>
    <div class="row">
      <label for="m-teamName">Roster Name</label>
      <input type="text" name="teamName" id="m-teamName"/>
      <p class="error">Error</p>
    </div>
    <div class="row">
      <label for="m-teamGame">Game</label>
      <select name="teamGame" id="m-teamGame">
        {{#each games }}
          <option value="{{this.title}}">{{this.title}}</option>
        {{/each}}
      </select>
      <p class="error">Error</p>
    </div>
    <div class="row">
      <label for="m-varsity">Varsity Status</label>
      <select id="m-varsity" name="varsity">
        <option value="Varsity">Varsity</option>
        <option value="Junior Varsity">Junior Varsity</option>
      </select>
      <p class="error">Error</p>
    </div>
    <button class="button rounded">SUBMIT</button>
  </form>
  <!-- team-form -->
  <form id="player-form">
    <button class="close button">&times;</button>
    <h2>Edit Player</h2>
    <div class="row">
      <label for="m-playerTeam">Roster Name</label>
      <input type="text" name="playerTeam" id="m-playerTeam"/>
      <p class="error">Error</p>
    </div>
    <div class="row">
      <label for="m-playerGame">Game</label>
      <select name="playerGame" id="m-playerGame">
        {{#each games }}
          <option value="{{this.title}}">{{this.title}}</option>
        {{/each}}
      </select>
      <p class="error">Error</p>
    </div>
    <div class="row">
      <label for="m-playerName">Username of Player</label>
      <select name="playerName" id="m-playerName">
        {{#each users }}
          <option value="{{this.username}}">{{this.username}}</option>
        {{/each}}
      </select>
      <p class="error">Error</p>
    </div>
    <div class="row">
      <label for="m-position">Position</label>
      <input type="text" name="position" id="m-position"/>
      <p class="error">Error</p>
    </div>
    <div class="row">
      <label for="m-starter">Starter Player?</label>
      <select name="starter" id="m-starter">
        <option value="true">Yes</option>
        <option value="false">No</option>
      </select>
      <p class="error">Error</p>
    </div>
    <div class="row">
      <label for="m-captain">Team Captain?</label>
      <select name="captain" id="m-captain">
        <option value="true">Yes</option>
        <option value="false">No</option>
      </select>
      <p class="error">Error</p>
    </div>
    <button class="button rounded">SUBMIT</button>
  </form>
  <!-- player-form -->
  <table id="teams" class="fillable">
    <thead>
      <tr>
        <th data-name="name">Roster Name</th>
        <th data-name="status">Varsity Status</th>
        <th data-name="game">Game</th>
        <th data-name="players">Players</th>
        <th>Add Player</th>
        <th>Edit Player</th>
        <th>Delete Player</th>
        <th>Edit Team</th>
        <th>Delete Team</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>
  <form>
  </form>
</section>