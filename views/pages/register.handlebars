<div class="page-container">
    <div class="main">
        <div class="login">
            <form method="POST" id="register-form" action="/register" class="form">
                <h1>Register</h1>
                {{#if error}}
                    <p class="error">{{error}}</p>
                {{/if}}
                <div class="form__row">
                    <label for="firstName" class="required">First Name</label>
                    <input type="text" id="firstName" name="firstName" placeholder="First Name" required>
                    <p class="error"></p>
                </div>
                <div class="form__row">
                    <label for="lastName" class="required">Last Name</label>
                    <input type="text" id="lastName" name="lastName" placeholder="Last Name" required>
                    <p class="error"></p>
                </div>
                <div class="form__row">
                    <label for="nickname" class="required">Nickname</label>
                    <input type="text" id="nickname" name="nickname" placeholder="Nickname" required>
                </div>
                <div class="form__row">
                    <label for="discord" class="required">Discord Name/ID</label>
                    <input type="text" id="discord" name="discord" placeholder="ABCD#1234" required>
                </div>
                <div class="form__row">
                    <label for="email" class="required">Email</label>
                    <input type="email" id="email" name="email" placeholder="Email" required>
                    <p class="error"></p>
                </div>
                <div class="form__row">
                    <label for="username" class="required">Username</label>
                    <input type="text" id="username" name="username" placeholder="Username" required>
                    <p class="error"></p>
                </div>
                <div class="form__row">
                    <label for="password" class="required">Password</label>
                    <input type="password" id="password" name="password" placeholder="Password" required>
                    <p class="error"></p>
                </div>
                <div class="form__row">
                    <label for="confirm_password" class="required">Confirm Password</label>
                    <input type="password" id="confirm_password" name="confirm_password" placeholder="Confirm Password" required>
                    <p class="error"></p>
                </div>
                <div class="form__row">
                    <label for="biography">Add Biography</label>
                    <textarea row="5" cols="40" id="biography" name="biography"></textarea>
                </div>
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>